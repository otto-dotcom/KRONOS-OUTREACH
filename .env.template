# KRONOS Outreach Engine - Configuration Template
# Copy this to .env and fill in your values

# N8N Configuration
N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=http

# SMTP Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=your-email@gmail.com
SMTP_FROM_NAME=Your Name

# Google Sheets Configuration (Optional)
GOOGLE_SHEETS_DOCUMENT_ID=your-spreadsheet-id
GOOGLE_SHEETS_CONTACTS_SHEET=Contacts
GOOGLE_SHEETS_LOG_SHEET=Outreach Log

# Outreach Configuration
RATE_LIMIT_SECONDS=3
FOLLOWUP_DELAY_DAYS=3
MAX_FOLLOWUPS=2
CAMPAIGN_ID=KRONOS-001

# Personalization
YOUR_NAME=Your Full Name
YOUR_TITLE=Your Job Title
YOUR_COMPANY=Your Company
YOUR_VALUE_PROPOSITION=We help companies achieve X results

# Webhook Security (Optional)
WEBHOOK_SECRET=your-secret-key-here

# Advanced Settings
DEBUG_MODE=false
DRY_RUN=false
MAX_EMAILS_PER_DAY=100
